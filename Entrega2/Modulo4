class Test001():
  def setup_method(self, method):
    self.driver = webdriver.Chrome()
    self.vars = {}
  
  def teardown_method(self, method):
    self.driver.quit()
  
  def test_001(self):
    self.driver.get("http://127.0.0.1:5000/")
    self.driver.set_window_size(1440, 900)
    self.driver.find_element(By.LINK_TEXT, "Sign In").click()
    self.driver.find_element(By.LINK_TEXT, "Register here").click()
    self.driver.find_element(By.NAME, "email").click()
    self.driver.find_element(By.NAME, "email").send_keys("galaruca@gmail.com")
    self.driver.find_element(By.ID, "password").click()
    self.driver.find_element(By.ID, "password").send_keys("Testing@ga")
    self.driver.find_element(By.ID, "cpassword").click()
    self.driver.find_element(By.ID, "cpassword").send_keys("Testing@ga")
    self.driver.find_element(By.NAME, "firstName").click()
    self.driver.find_element(By.NAME, "firstName").send_keys("gala")
    self.driver.find_element(By.CSS_SELECTOR, "form").click()
    self.driver.find_element(By.CSS_SELECTOR, "form").click()
    element = self.driver.find_element(By.CSS_SELECTOR, "form")
    actions = ActionChains(self.driver)
    actions.double_click(element).perform()
    self.driver.find_element(By.NAME, "lastName").click()
    self.driver.find_element(By.NAME, "lastName").send_keys("ruca")
    self.driver.find_element(By.NAME, "address1").click()
    self.driver.find_element(By.NAME, "address1").send_keys("calle 123")
    self.driver.find_element(By.NAME, "zipcode").click()
    self.driver.find_element(By.NAME, "zipcode").send_keys("32804")
    self.driver.find_element(By.NAME, "city").click()
    self.driver.find_element(By.NAME, "city").send_keys("Orlando")
    self.driver.find_element(By.NAME, "state").click()
    self.driver.find_element(By.NAME, "country").click()
    self.driver.find_element(By.NAME, "country").send_keys("USA")
    self.driver.find_element(By.NAME, "state").click()
    self.driver.find_element(By.NAME, "state").send_keys("Miami")
    self.driver.find_element(By.NAME, "phone").click()
    self.driver.find_element(By.NAME, "phone").send_keys("1145678901")
    self.driver.find_element(By.CSS_SELECTOR, "p:nth-child(13) > input").click()
    self.driver.find_element(By.NAME, "email").send_keys("galaruca@gmail.com")
    self.driver.find_element(By.NAME, "password").send_keys("Testing@ga")
    self.driver.find_element(By.CSS_SELECTOR, "p:nth-child(3) > input").click()

# asserts
    self.driver.get("http://127.0.0.1:5000/account/profile/edit")
    assert "galaruca@gmail.com" == self.driver.find_element(By.NAME, "email").get_property("value")
    assert "gala" == self.driver.find_element(By.NAME, "firstName").get_property("value")
    assert "ruca" == self.driver.find_element(By.NAME, "lastName").get_property("value")
    assert "calle 123" == self.driver.find_element(By.NAME, "address1").get_property("value")       
    assert "32804" == self.driver.find_element(By.NAME, "zipcode").get_property("value")
    assert "Orlando" == self.driver.find_element(By.NAME, "city").get_property("value")
    assert "Florida" == self.driver.find_element(By.NAME, "state").get_property("value")
    assert "USA" == self.driver.find_element(By.NAME, "country").get_property("value")
    assert "1145678901" == self.driver.find_element(By.NAME, "phone").get_property("value")
